<div id="<%= dom_id product_type %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product_type.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this product type", product_type, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this product type', edit_product_type_path(product_type), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
