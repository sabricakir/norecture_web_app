<div id="<%= dom_id product_url %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= product_url.body %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this product url", product_url, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this product url', edit_product_url_path(product_url), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
